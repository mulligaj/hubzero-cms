<config>
	<params>
		<param name="geodb_driver" type="text" default="mysql" label="Geolocation Database type" description="TIPDTATABASETYPE" />
		<param name="geodb_host" type="text" default="localhost" label="Geolocation DB Hostname" description="TIPDATABASEHOSTNAME" />
		<param name="geodb_port" type="text" default="" label="Geolocation DB Port" description="TIPDATABASEPORT" />
		<param name="geodb_user" type="text" default="" label="Geolocation DB Username" description="TIPDATABASEUSERNAME" />
		<param name="geodb_password" type="password" default="" label="Geolocation DB Password" description="TIPDATABASEPASSWORD" />
		<param name="geodb_database" type="text" default="" label="Geolocation DB Schema" description="TIPDATABASENAME" />
		<param name="geodb_prefix" type="text" default="" label="Geolocation DB Table Prefix" description="TIPDATABASEPREFIX" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="ldap_primary" type="text" default="ldap://localhost" label="LDAP Primary Host URI" description="TIPPRIMARYLDAP" />
		<param name="ldap_secondary" type="text" default="" label="LDAP Secondary Host URI" description="TIPSECONDARYLDAP" />
		<param name="ldap_basedn" type="text" default="" label="LDAP Base DN" description="TIPLDAPBASEDN" />
		<param name="ldap_searchdn" type="text" default="" label="LDAP Search DN" description="TIPLDAPSEARCHDN" />
		<param name="ldap_searchpw" type="password" default="" label="LDAP Search Password" description="TIPLDAPSEARCHPASSWORD" />
		<param name="ldap_managerdn" type="text" default="" label="LDAP Manager DN" description="TIPLDAPMANAGERDN" />
		<param name="ldap_managerpw" type="password" default="" label="LDAP Manager Password" description="TIPLDAPMANAGERPASSWORD" />
		<param name="ldap_tls" type="radio" default="0" label="Use LDAP TLS" description="TIPLDAPTLS">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="whitelist" type="textarea" rows="15" cols="40" default="127.0.0.1" description="A comma-separated list of white-listed IP addresses" />
	</params>
	<fieldset name="geodb">
		<field name="geodb_driver" type="text" default="mysql" label="Geolocation Database type" description="TIPDTATABASETYPE" />
		<field name="geodb_host" type="text" default="localhost" label="Geolocation DB Hostname" description="TIPDATABASEHOSTNAME" />
		<field name="geodb_port" type="text" default="" label="Geolocation DB Port" description="TIPDATABASEPORT" />
		<field name="geodb_user" type="text" default="" label="Geolocation DB Username" description="TIPDATABASEUSERNAME" />
		<field name="geodb_password" type="password" default="" label="Geolocation DB Password" description="TIPDATABASEPASSWORD" />
		<field name="geodb_database" type="text" default="" label="Geolocation DB Schema" description="TIPDATABASENAME" />
		<field name="geodb_prefix" type="text" default="" label="Geolocation DB Table Prefix" description="TIPDATABASEPREFIX" />
	</fieldset>
	<fieldset name="ldap">
		<field name="ldap_primary" type="text" default="ldap://localhost" label="LDAP Primary Host URI" description="TIPPRIMARYLDAP" />
		<field name="ldap_secondary" type="text" default="" label="LDAP Secondary Host URI" description="TIPSECONDARYLDAP" />
		<field name="ldap_basedn" type="text" default="" label="LDAP Base DN" description="TIPLDAPBASEDN" />
		<field name="ldap_searchdn" type="text" default="" label="LDAP Search DN" description="TIPLDAPSEARCHDN" />
		<field name="ldap_searchpw" type="password" default="" label="LDAP Search Password" description="TIPLDAPSEARCHPASSWORD" />
		<field name="ldap_managerdn" type="text" default="" label="LDAP Manager DN" description="TIPLDAPMANAGERDN" />
		<field name="ldap_managerpw" type="password" default="" label="LDAP Manager Password" description="TIPLDAPMANAGERPASSWORD" />
		<field name="ldap_tls" type="radio" default="0" label="Use LDAP TLS" description="TIPLDAPTLS">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
	</fieldset>
	<fieldset name="api">
		<field name="Whitelist" type="textarea" rows="15" cols="40" default="127.0.0.1" description="A comma-separated list of white-listed IP addresses that can access the API for system reporting." />
	</fieldset>
</config>

