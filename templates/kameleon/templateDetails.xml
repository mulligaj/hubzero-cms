					<option value="orange">TPL_KAMELEON_FIELD_THEME_ORANGE</option>
					<option value="red">TPL_KAMELEON_FIELD_THEME_RED</option>
					<option value="salmon">TPL_KAMELEON_FIELD_THEME_SALMON</option>
					<option value="purple">TPL_KAMELEON_FIELD_THEME_PURPLE</option>
					<option value="yellow">TPL_KAMELEON_FIELD_THEME_YELLOW</option>
