<extension version="2.5" type="plugin" group="content">
	<name>plg_content_antispam</name>
	<author>HUBzero</author>
	<creationDate>October 2013</creationDate>
	<copyright>Copyright 2005-2013 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<authorEmail>support@hubzero.org</authorEmail>
	<authorUrl>hubzero.org</authorUrl>
	<version>2.5.0</version>
	<description>PLG_CONTENT_ANTISPAM_XML_DESCRIPTION</description>

	<files>
		<filename plugin="antispam">antispam.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_content_antispam.ini</language>
		<language tag="en-GB">en-GB.plg_content_antispam.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="blacklist" type="textarea" rows="15" cols="40" label="PLG_CONTENT_ANTISPAM_PARAM_BLACKLIST_LABEL" default="" description="PLG_CONTENT_ANTISPAM_PARAM_BLACKLIST_DESC" />
				<field name="badwords" type="textarea" rows="15" cols="40" label="PLG_CONTENT_ANTISPAM_PARAM_BADWORDS_LABEL" default="viagra, xanax, phentermine, ringtones, tramadol, hydrocodone, levitra, ambien, vicodin, fioricet, diazepam, accarat, casino, fuck, crap, shit, asshole, cunt, fucker, fuckers, motherfucker, fucking, milf, cocksucker, porno, videosex, hentai, kasino, kasinos, poker" description="PLG_CONTENT_ANTISPAM_PARAM_BADWORDS_DESC" />
				<field name="linkFrequency" type="text" size="10" default="5" label="PLG_CONTENT_ANTISPAM_PARAM_LINKFREQUENCY_LABEL" description="PLG_CONTENT_ANTISPAM_PARAM_LINKFREQUENCY_DESC" />
				<field name="linkRatio" type="text" size="10" default="40" label="PLG_CONTENT_ANTISPAM_PARAM_LINKRATIO_LABEL" description="PLG_CONTENT_ANTISPAM_PARAM_LINKRATIO_DESC" />
				<field name="linkValidation" type="list" default="0" label="PLG_CONTENT_ANTISPAM_PARAM_LINKVALIDATION_LABEL" description="PLG_CONTENT_ANTISPAM_PARAM_LINKVALIDATION_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="message" type="text" size="10" default="The submitted text was detected as possible spam or containing inappropriate content." label="PLG_CONTENT_ANTISPAM_PARAM_MESSAGE_LABEL" description="PLG_CONTENT_ANTISPAM_PARAM_MESSAGE_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
