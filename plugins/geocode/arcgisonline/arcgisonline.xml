<extension version="1.7" type="plugin" group="geocode">
	<name>Geocode - ArcGISOnline</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2014 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>ArcGISOnline provider for geocode</description>
	<files>
		<filename plugin="arcgisonline">arcgisonline.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_geocode_arcgisonline.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="sourceCountry" type="text" menu="hide" label="Source Country" default="" description="Source Country" />
				<field name="useSsl" type="list" default="0" label="Use SSL" description="Use SSL?">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
