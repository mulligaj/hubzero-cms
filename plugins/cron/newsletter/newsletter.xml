<extension version="1.7" type="plugin" group="cron">
	<name>Cron - Newsletter</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2013 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>Cron events for newsletter</description>
	<files>
		<filename plugin="newsletter">newsletter.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_cron_newsletter.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset group="processmailings">
				<field type="text" name="newsletter_queue_limit" default="25" label="Queued Emails Limit:" description="Number of queued emails to send out each time the cron process is run." />
			</fieldset>
		</fields>
	</config>
	<params group="processmailings">
		<param type="text" name="newsletter_queue_limit" default="25" label="Queued Emails Limit:" description="Number of queued emails to send out each time the cron process is run." />
	</params>
</extension>
