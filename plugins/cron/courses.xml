<install version="1.5" type="plugin" group="cron">
	<name>Cron - Courses</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2013 by Purdue Research Foundation, West Lafayette, IN 47906</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2</license>
	<description>Cron events for courses.</description>
	<files>
		<filename plugin="courses">courses.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_cron_courses.ini</language>
	</languages>
	<params group="emaildigest">
		<param name="course" type="sql" default="0" label="Select course to receive emails" query="SELECT 0 AS value, 'All' AS course UNION SELECT id AS value, title AS course FROM #__courses" />
	</params>
</install>