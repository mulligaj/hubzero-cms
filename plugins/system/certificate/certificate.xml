<install version="1.5" type="plugin" group="system">
	<name>System - CAC</name>
	<description>Enables client side certificate based route limiting</description>
	<files>
		<filename plugin="certificate">certificate.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="failure_location" type="text" size="50" label="Failure location" description="A static page to display when no certificate is present" default="/invalidcert.php" />
			</fieldset>
		</fields>
	</config>
</install>

