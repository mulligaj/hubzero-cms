<extension type="template" version="2.5" client="administrator">
	<name>kameleon (admin)</name>
	<creationDate>05/24/14</creationDate>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2015 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<version>1.0</version>
	<description>Administration template for HUBzero CMS</description>
	<files>
		<filename>index.php</filename>
		<filename>css/index.css</filename>
		<filename>css/login.css</filename>
		<filename>css/component.css</filename>
		<filename>css/error.css</filename>
	</files>
	<positions>
		<position>menu</position>
		<position>submenu</position>
		<position>toolbar</position>
		<position>title</position>
		<position>status</position>
		<position>icon</position>
		<position>cpanel</position>
		<position>debug</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="header" type="list" default="light" label="TPL_KAMELEON_FIELD_HEADER_LABEL" description="TPL_KAMELEON_FIELD_HEADER_DESC">
					<option value="light">TPL_KAMELEON_FIELD_HEADER_LIGHT</option>
					<option value="dark">TPL_KAMELEON_FIELD_HEADER_DARK</option>
				</field>
				<field name="theme" type="list" default="" label="TPL_KAMELEON_FIELD_THEME_LABEL" description="TPL_KAMELEON_FIELD_THEME_DESC">
					<option value="custom">TPL_KAMELEON_FIELD_THEME_CUSTOM</option>
					<option value="">TPL_KAMELEON_FIELD_THEME_GRAY</option>
					<option value="charcoal">TPL_KAMELEON_FIELD_THEME_CHARCOAL</option>
					<option value="blue">TPL_KAMELEON_FIELD_THEME_BLUE</option>
					<option value="bluesteel">TPL_KAMELEON_FIELD_THEME_BLUESTEEL</option>
					<option value="aqua">TPL_KAMELEON_FIELD_THEME_AQUA</option>
					<option value="green">TPL_KAMELEON_FIELD_THEME_GREEN</option>
					<option value="olive">TPL_KAMELEON_FIELD_THEME_OLIVE</option>
					<option value="lime">TPL_KAMELEON_FIELD_THEME_LIME</option>
					<option value="orange">TPL_KAMELEON_FIELD_THEME_ORANGE</option>
					<option value="red">TPL_KAMELEON_FIELD_THEME_RED</option>
					<option value="wine">TPL_KAMELEON_FIELD_THEME_WINE</option>
					<option value="salmon">TPL_KAMELEON_FIELD_THEME_SALMON</option>
					<option value="pink">TPL_KAMELEON_FIELD_THEME_PINK</option>
					<option value="purplepowder">TPL_KAMELEON_FIELD_THEME_PURPLEPOWDER</option>
					<option value="purple">TPL_KAMELEON_FIELD_THEME_PURPLE</option>
					<option value="grape">TPL_KAMELEON_FIELD_THEME_GRAPE</option>
					<option value="yellow">TPL_KAMELEON_FIELD_THEME_YELLOW</option>
				</field>
				<field name="color" type="color" default="" label="TPL_KAMELEON_FIELD_COLOR_LABEL" description="TPL_KAMELEON_FIELD_COLOR_DESC" />
				<field name="login" type="list" default="0" label="TPL_KAMELEON_FIELD_LOGIN_LABEL" description="TPL_KAMELEON_FIELD_LOGIN_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
					<option value="2">TPL_KAMELEON_FIELD_LOGIN_SEASONAL</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
