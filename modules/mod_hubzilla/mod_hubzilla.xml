<extension version="1.5.0" client="site" type="module">
	<name>Hubzilla</name>
	<author>HUBzero</author>
	<creationDate>August 2012</creationDate>
	<copyright>Copyright 2005-2009 by Purdue Research Foundation, West Lafayette, IN 47906.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>zooley@purdue.edu</authorEmail>
	<version>1.5.0</version>
	<description>Hubzilla attack!</description>
	<files>
		<filename module="mod_hubzilla">mod_hubzilla.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>index.html</filename>
		<filename>mod_hubzilla.css</filename>
		<filename>mod_hubzilla.js</filename>
		<filename>sounds/roar.mp3</filename>
		<filename>sounds/roar.ogg</filename>
		<filename>sounds/roar.wav</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="posLeft" type="text" default="auto" label="Left" description="Left position" />
				<field name="posRight" type="text" default="5px" label="Right" description="Right position" />
				<field name="posTop" type="text" default="auto" label="Top" description="Top position" />
				<field name="posBottom" type="text" default="5px" label="Bottom" description="Bottom position" />
			</fieldset>
			<fieldset name="advanced">
				<field name="cache" type="radio" default="0" label="Enable Cache" description="Select whether to cache the content of this module">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="cache_time" type="text" default="15" label="Cache Time" description="The time before the module is recached" />
			</fieldset>
		</fields>
	</config>
	<languages>
		<language tag="en-GB">en-GB.mod_hubzilla.ini</language>
	</languages>
</extension>