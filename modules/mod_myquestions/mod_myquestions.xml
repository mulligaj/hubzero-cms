<extension version="1.5.0" client="site" type="module">
	<name>My Questions</name>
	<author>snowwitje</author>
	<creationDate>Jan 2009</creationDate>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>alisa@purdue.edu</authorEmail>
	<version>1</version>
	<description>This module will display a list of questions submitted by the user, as well as those user can answer.</description>
	<files>
		<filename module="mod_myquestions">mod_myquestions.php</filename>
		<filename>index.html</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>mod_myquestions.css</filename>
		<filename>images/heart.png</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_mod_myquestions.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="Module class" description="A CSS class to be applied to the module, this allows individual module styling" />
				<field name="show_assigned" type="list" default="0" label="Show Assigned Questions" description="Display assigned questions." member_dashboard="1">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
				<field name="show_interests" type="list" default="0" label="Show Relavent Questions" description="Display questions matching my interests." member_dashboard="1">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
				<field name="button_show_all" type="list" default="1" label="Show All Questions Button" description="Select wether to show the link to the all questions listing.">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="button_show_add" type="list" default="1" label="Show New Question Button" description="Select wether to show the link to the create question form.">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="limit" type="text" default="5" label="# to display" description="The number of items to display." member_dashboard="1" />
			</fieldset>
		</fields>
	</config>
</extension>