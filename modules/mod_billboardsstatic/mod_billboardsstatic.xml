<install type="module" version="1.5">
	<name>Billboards (static)</name>
	<author>HUBzero</author>
	<creationDate>May 2013</creationDate>
	<version>1.0</version>
	<description>Randomly display one of billboards of content</description>
	<files>
		<filename module="mod_billboardsstatic">mod_billboardsstatic.php</filename>
		<filename>mod_billboardsstatic.js</filename>
		<filename>mod_billboardsstatic.css</filename>
		<filename>helper.php</filename>
		<filename>mod_billboardsstatic.xml</filename>
		<filename>index.html</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
	</files>
	<params>
		<param name="collection" type="sql" default="1" label="Billboard Collection" description="Select the billboard collection to use" query="SELECT id AS value, name AS collection FROM #__billboard_collection" />
		<param name="random" type="radio" default="0" label="Random" description="Randomly order billboards?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>
