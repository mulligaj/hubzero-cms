<extension version="1.5.0" client="site" type="module">
	<name>My Sessions</name>
	<author>Christopher Smoak</author>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>This module shows a list of the user's active tool sessions.</description>
	<files>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_mysessions.css</filename>
		<filename>mod_mysessions.jquery.js</filename>
		<filename>mod_mysessions.js</filename>
		<filename module="mod_mysessions">mod_mysessions.php</filename>
		<filename>mod_mysessions.xml</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="Module class suffix" description="A CSS class to be applied to the module container, this allows individual module styling" />
				<field type="spacer" />

				<field name="show_screenshots" member_dashboard="1" type="list" default="1" label="Show Session Screenshots" description="Select wether to show session screenshots or not.">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
				<field name="show_storage"  member_dashboard="1" type="list" default="1" label="Show storage" description="Select wether to show the storage meter or not.">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
				<field type="spacer" />

				<field name="quick_launch" member_dashboard="1" type="list" default="1" label="Quick Launch" description="Have quick launch link in title bar for each session?">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
				<field name="terminate_double_check" member_dashboard="1" type="list" default="1" label="Confirm Terminate" description="Does user need to confirm terminating sessions?">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<languages>
		<language tag="en-GB">en-GB.mod_mysessions.ini</language>
	</languages>
</extension>