<extension version="1.5.0" client="site" type="module">
	<name>Notices Module</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>This module shows a notice (when site will be down, etc.) box for site visitors.</description>
	<files>
		<filename module="mod_notices">mod_notices.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="alertlevel" type="list" default="low" label="Alert level" description="The alert level the notice field will take. Determines color.">
					<option value="low">Low</option>
					<option value="medium">Medium</option>
					<option value="high">High</option>
				</field>
				<field name="moduleid" type="text" default="" label="Module ID" description="An ID to be applied to the css of the module container, this allows individual module styling" />
				<field name="message" type="textarea" rows="5" cols="40" default="" label="Message" description="The message to be displayed." />
				<field name="allowClose" type="radio" default="0" label="Allow closing" description="Allow the notice to be closed by the user">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
				<field name="autolink" type="radio" default="1" label="Autolink message" description="Autolink urls &amp; email addresses in notice content.">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<languages>
		<language tag="en-GB">en-GB.mod_notices.ini</language>
	</languages>
</extension>