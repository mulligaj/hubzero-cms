<extension version="1.5.0" client="site" type="module">
	<name>Twitter Feed</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<authorEmail>csmoak@purdue.edu</authorEmail>
	<version>1.0.0</version>
	<description>Loads the Twitter feed of the specified Twitter ID</description>
	<files>
		<filename module="mod_twitterfeed">mod_twitterfeed.php</filename>
		<filename>mod_twitterfeed.css</filename>
		<filename>index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_twitterfeed.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleTitle" type="text" default="" label="Module Title Text" description="The title of the module block." />
				<field name="twitterID" type="text" default="" label="Twitter ID" description="The Twitter ID of the Twitter account to be displayed." />
				<field name="tweetcount" type="text" default="3" label="Tweet Count" description="The number of latest Tweets to display." />
				<field name="displayHeader" type="list" default="yes" label="Display Header" description="Display Twitter Widget Header.">
					<option value="yes">Yes</option>
					<option value="no">No</option>
				</field>
				<field name="displayFooter" type="list" default="yes" label="Display Footer" description="Display Twitter Widget Footer.">
					<option value="yes">Yes</option>
					<option value="no">No</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>